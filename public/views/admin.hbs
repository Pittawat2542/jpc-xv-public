        <div class="row">
          <form id="search-user" class="ui form">
            <h4>Search User Info</h4>
            <hr>
            <div class="form-group">
              <label for="id">USER ID: </label>
              <input class="form-control" type="text" name="id" required>
            </div>
            <button type="submit" class="btn btn-primary button">Search</button>
          </form>
        </div>
        <div class="row">
          <div id="search-result-user" class="width-100"></div>
        </div>
        <div class="row">
          <form id="search-answer" class="ui form">
            <h4>Search Answer</h4>
            <hr>
            <div class="form-group">
              <label for="id">USER ID: </label>
              <input class="form-control" type="text" name="id" required>
            </div>
            <button type="submit" class="btn btn-primary button">Search</button>
          </form>
        </div>
        <div class="row">
          <div id="search-result-answer" class="width-100"></div>
        </div>
        <div class="row">
          <form id="upload-picture" enctype="multipart/form-data">
            <h4>Uplaod Picture for User</h4>
            <label for="id">USER ID: </label>
            <input class="form-control" type="text" name="id" required>
            <input class="form-control" type="file" name="picture" required>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>
        </div>
        <div class="row">
          <form id="upload-document" enctype="multipart/form-data">
            <h4>Uplaod Document for User</h4>
            <label for="id">USER ID: </label>
            <input class="form-control" type="text" name="id" required>
            <input class="form-control" type="file" name="document" required>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>
        </div>
        <div class="row">
          <form id="search-user-all" class="ui form">
            <h4>Show All Users</h4>
            <hr>
            <button type="submit" class="btn btn-primary button">Show All</button>
          </form>
        </div>
        <div class="row">
          <div id="search-result-user-all" class="width-100"></div>
        </div>
        <div class="row">
