                <div class="row">
                  <div class="col-12 col-md-8">
                    <div class="numbers mb-2">
                      <p class="card-category">Registered History</p>
                    </div>
                    <div>
                      <p id="out">
                        <script>
                          var str = "{{countLog}}";
                          str = str.replace(new RegExp("&lt;", "g"), "<");
                          str = str.replace(new RegExp("&gt;", "g"), ">");
                          var arr = str.split("<br>");
                          var res = "";
                          arr.map(x => res += ("<li>" + x + "</li>"));
                          str = "<ul>" + str + "</ul>";
                          $("#out").append($.parseHTML(res));
                        </script>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
